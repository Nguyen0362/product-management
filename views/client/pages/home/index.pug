extends ../../layouts/default.pug
include ../../mixin/box-head.pug
include ../../mixin/product-item.pug

block main 
    .container.my-3
        +box-head("Sản phẩm nổi bật")

        .row
            each item in productsFeatured
                +product-item(item)

    .container.my-3
        +box-head("Sản phẩm mới")

        .row
            each item in productsNew
                +product-item(item)

    .container.my-3
        +box-head("Sản phẩm giảm giá nhiều")

        .row
            each item in productsDiscount
                +product-item(item)

    .container.my-3
        +box-head("Sản phẩm gợi ý")

        .row
            each item in productsChoose
                +product-item(item)